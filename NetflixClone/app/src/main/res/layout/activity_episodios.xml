<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black100"
    tools:context=".EpisodiosActivity">

    <ImageView
        android:id="@+id/imagemVideo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:src="@drawable/play"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="80dp"
        />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/branco"
        android:text="The Witcher"
        android:textSize="24sp"
        android:fontFamily="sans-serif-black"
        android:layout_below="@id/imagemVideo"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/relevante"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textColor="@color/verde"
        android:text="93% Relevante"
        android:layout_below="@id/titulo"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/ano"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textColor="@color/branco"
        android:text="2019"
        android:fontFamily="sans-serif-black"
        android:layout_below="@+id/titulo"
        android:layout_toEndOf="@id/relevante"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/temporada"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/branco"
        android:text="1 Temporada"
        android:fontFamily="sans-serif-black"
        android:layout_below="@id/titulo"
        android:layout_toEndOf="@id/ano"
        android:layout_marginTop="20dp"
        />




</RelativeLayout>