<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black100"
    tools:context=".EpisodiosActivity">

    <ImageView
        android:id="@+id/imagemVideo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        />

    <ImageView
        android:id="@+id/playVideo"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:src="@drawable/play"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="80dp"
        />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/branco"
                android:text="The Witcher"
        android:textSize="24sp"
        android:fontFamily="sans-serif-black"
        android:layout_below="@id/imagemVideo"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        />

        <TextView
            android:id="@+id/relevante"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textColor="@color/verde"
            android:text="93% Relevante"
            android:textSize="16sp"
            android:layout_below="@id/titulo"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            />

        <TextView
            android:id="@+id/ano"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="@color/branco"
            android:text="2019"
            android:textSize="16sp"
            android:fontFamily="sans-serif-black"
            android:layout_below="@+id/titulo"
            android:layout_toEndOf="@id/relevante"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/temporada"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/branco"
            android:text="1 Temporada"
            android:textSize="16sp"
            android:fontFamily="sans-serif-black"
            android:layout_below="@id/titulo"
            android:layout_toEndOf="@id/ano"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/branco"
            android:text="@string/descricao"
            android:fontFamily="sans-serif-black"
            android:layout_below="@id/relevante"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/elenco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/cinzaClaro"
            android:textSize="14sp"
            android:text="@string/Elenco"
            android:layout_below="@id/descricao"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:id="@+id/add1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/elenco"
            android:src="@drawable/ic_add"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:id="@+id/add2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/elenco"
            android:layout_toEndOf="@id/add1"
            android:src="@drawable/ic_add"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:id="@+id/share"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/elenco"
            android:layout_toEndOf="@id/add2"
            android:src="@drawable/ic_share"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/texto1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textColor="@color/branco"
            android:text="Minha lista"
            android:layout_below="@id/add1"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:id="@+id/texto2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textColor="@color/branco"
            android:text="Classifique"
            android:layout_below="@id/add2"
            android:layout_toEndOf="@id/texto1"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/texto3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textColor="@color/branco"
            android:text="Compartilhe"
            android:layout_below="@id/share"
            android:layout_toEndOf="@id/texto2"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/episodes"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textColor="@color/branco"
            android:text="EPISODES"
            android:fontFamily="sans-serif-black"
            android:layout_below="@id/texto1"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"
            />

        <TextView
            android:id="@+id/trailer"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:textColor="@color/branco"
            android:text="TRAILER E MORE"
            android:fontFamily="sans-serif-black"
            android:layout_below="@id/texto2"
            android:layout_toEndOf="@id/episodes"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"
            />

        <TextView
            android:id="@+id/likeThis"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:textColor="@color/branco"
            android:text="MORE LIKE THIS"
            android:fontFamily="sans-serif-black"
            android:layout_below="@id/texto3"
            android:layout_toEndOf="@id/trailer"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"
            />

    </RelativeLayout>

</ScrollView>